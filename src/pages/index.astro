---
import Layout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar";
import LinkButton from "../components/LinkButton.astro";
import IconLink from "../components/IconLink.astro";
import ProjectCard from "../components/ProjectCard.astro";
---
<Layout title="Eilay Katsnelson">
    <Navbar />
    <!--hero-->
    <section class="pt-10">
        <h1 class="block text-6xl my-4">Eilay Katsnelson</h1>
        <!--TODO: make this text animate in-->
        <div class="bg-surface p-2 w-3/4 shadow-xl">
            <p>> Computer Science student at the University of Ottawa.</p>
        </div>
        <div class="w-full flex gap-4 justify-between mt-6">
            <div class="flex gap-4">
                <LinkButton href="#" text="CV" />
            </div>
            <div class="flex gap-4">
                <IconLink href="#" iconName="linkedin" />
                <IconLink href="#" iconName="github" />
            </div>
        </div>
    </section>
    <!--linebreak-->
    <hr class="my-10" />
    <!--Projects-->
    <section class="">
        <h2 class="text-5xl">Projects</h2>
        <div class="flex flex-wrap flex-row gap-y-5">
            <ProjectCard title="smartGO-API" skills={["Rust", "Axum"]}>
                REST API for Metrolinx's GO Trains.
                Shows real-time departure times including
                scheduled departure times, delays, train length, platform, and more.
            </ProjectCard>
            <ProjectCard title="smartGO-app" skills={["React Native"]}>
                Mobile app for iOS and Android devices. Consumes smartGO-API to show
                real-time departure times for Metrolinx GO trains.
            </ProjectCard>
            <ProjectCard title="P2P-FileShare" skills={["React", "WebRTC"]}>
                Peer-to-peer file sharing web app created for Hack The Hill hackathon.
            </ProjectCard>
            <ProjectCard title="uOttawaRMP" skills={["NodeJS", "WebExtensions"]}>
                Cross-browser extension that injects RateMyProf data into the
                course selection portal for uOttawa students.
            </ProjectCard>
        </div>
    </section>

</Layout>